<% products.each do |product| %>
  <div class="col-md-4">
    <div class="pd-box tg-verifiedad">
      <figure>
        <%= raw(tag_value(product)) %>
        <% puts "=============" %>
        <% puts product.inspect %>
        <%= link_to product_path(category.permalink, brand.permalink, product.permalink) do %>
          <%= image_tag product.image('thumb'), alt: "image description", class: "img-fluid" %>
        <% end %>
      </figure>
      <div class="pd-box-content">
        <div class="pd-box-title">
          <h4>
            <%= link_to product.name.titleize, 
                        product_path(category.permalink, brand.permalink, product.permalink) %>
          </h4>
        </div>
        <div class="pd-box-desc">
          <%= raw(simple_format(product.short_specification)) %>
        </div>
        <div class="pd-box-detail">
          <%= link_to "DETAIL", product_path(category.permalink, brand.permalink, product.permalink) %>
        </div>
      </div>
    </div>
  </div>
<% end %>