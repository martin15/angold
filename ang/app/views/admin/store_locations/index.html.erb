<section class="single-page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h2>Store Locations</h2>
      </div>
      <div class="col-md-5 align-self-center">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
            <li class="breadcrumb-item active" aria-current="page">Store Locations</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</section>

<section class="admin-section-content">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 admin-store-locations">
        <%= render :partial => "shared/flash" %>
        <p><%= link_to "Add new store location", new_admin_store_location_path, class: "btn btn-primary" %></p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Detail</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @store_locations.each_with_index do |store_location, x| %>
              <tr>
                <th scope="row"><%= @no+x+1 %></th>
                <td><%= store_location.name %></td>
                <td><%= raw(simple_format(store_location.detail))%></td>
                <td>
                  <%= link_to "Edit", edit_admin_store_location_path(store_location.id, :page => params[:page]), :class => "btn btn-success" %>
                  <%= link_to "Delete", admin_store_location_path(store_location.id, :page => params[:page] ), :method => :delete,
                                        data: {:confirm => "Are you sure?"}, :class => "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="col-xs-12 pagination justify-content-center"><%= paginate @store_locations %></div>
      </div>
    </div>
  </div>
</section>

